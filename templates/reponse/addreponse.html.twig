      <!--  Sidebar End -->
      <!--  Main wrapper -->
      <div class="body-wrapper">
        <!--  Header Start -->
        <header class="app-header">
          <nav class="navbar navbar-expand-lg navbar-light">
            <ul class="navbar-nav">
              <li class="nav-item d-block d-xl-none">
                <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                  <i class="ti ti-menu-2"></i>
                </a>
              </li>
            </ul>
    
          </nav>
        </header>
        <!--  Header End -->
        <div class="container-fluid">


    <h1 style="text-align: center; color: #000080;">Ajout de reponse</h1> <!-- Couleur bleu foncé pour le titre -->
    <br>
    <br>
    <div class="table-responsive">
        <table class="table table-bordered" style="background-color: #f5f5f591; font-size:12px; margin-top: 20px; border-radius: 5px;">
{{ form_start(form, {'action': path('addreponse', {'reclamation_id': app.request.query.get('reclamation_id')}), 'method': 'POST', 'attr': {'name': 'frm-contact', 'novalidate': 'novalidate'}}) }}

<p class="form-row">
    {{ form_label(form.reponse, "Réponse") }}
    {{ form_widget(form.reponse, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.reponse) }}
</p>

{{ form_widget(form, {'attr': {'hidden': true}}) }}


<p class="form-row">
    <button class="btn btn-submit" type="submit">Envoyer</button>
    <a href="{{ path('admin') }}" class="btn btn-secondary" style="font-size: 14px; margin-left: 10px;">Retour</a>
</p>

{{ form_end(form) }}



</table>
</div>



      </div>
    </div>
  </div>


  {% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert" style="font-size: 14px ">
        {{ message }}
    </div>
{% endfor %}
