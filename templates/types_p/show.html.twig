{% extends 'types_p/index.html.twig' %}

{% block title %}Détails du Type{% endblock %}

{% block content %}
    <h1>Détails du Type</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ type.nomTypes }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ type.descriptionTypes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('types_index') }}">Retour à la liste</a>

    <a href="{{ path('types_edit', {'id': type.id}) }}">Modifier</a>

    {{ include('types_p/_delete_form.html.twig') }}
{% endblock %}
