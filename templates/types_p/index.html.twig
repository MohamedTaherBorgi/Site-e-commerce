                    <td>{{ type.id }}</td>
                    <td>{{ type.nomTypes }}</td>
                    <td>{{ type.descriptionTypes }}</td>
                    <td>
                        <a href="{{ path('types_show', {'id': type.id}) }}">Voir</a>
                        <a href="{{ path('types_edit', {'id': type.id}) }}">Modifier</a>
                        <a href="{{ path('types_delete', {'id': type.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="4">Aucun type trouvé</td></tr>
            {% endfor %}
        </tbody>
    </table>
