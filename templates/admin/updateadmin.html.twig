        </div>
        <!-- End Sidebar scroll-->
    </aside>
    
      <!--  Sidebar End -->
      <!--  Main wrapper -->
      <div class="body-wrapper">
        <!--  Header Start -->
        <header class="app-header">
          <nav class="navbar navbar-expand-lg navbar-light">
            <ul class="navbar-nav">
              <li class="nav-item d-block d-xl-none">
                <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                  <i class="ti ti-menu-2"></i>
                </a>
              </li>
            </ul>
    
          </nav>
        </header>
        <!--  Header End -->
        <div class="container-fluid">


    <h1 style="text-align: center; color: #000080;">Modification de la réclamations</h1> <!-- Couleur bleu foncé pour le titre -->
    <br>
    <br>
    <div class="table-responsive">
        <table class="table table-bordered" style="background-color: #f5f5f591; font-size:12px; margin-top: 20px; border-radius: 5px;">
            {{ form_start(form, {'action': path('updateadmin', {'id': id}), 'method': 'POST' })}}
            
            <tr>
                <td>
                    {{ form_label(form.nom, "Nom") }}
                    {{ form_widget(form.nom,{'attr': {'class': 'form-control'},'readonly': 'readonly'}) }}
                    {{ form_errors(form.nom) }}
                </td>
            </tr>
            
            <tr>
                <td>
                    {{ form_label(form.prenom, "Prénom") }}
                    {{ form_widget(form.prenom,{'attr': {'class': 'form-control'},'readonly': 'readonly'}) }}
                    {{ form_errors(form.prenom) }}
                </td>
            </tr>
            
            <tr>
                <td>
                    {{ form_label(form.telephone, "Téléphone") }}
                    {{ form_widget(form.telephone,{'attr': {'class': 'form-control'},'readonly': 'readonly'}) }}
                    {{ form_errors(form.telephone) }}
                </td>
            </tr>
            
            <tr>
                <td>
                    {{ form_label(form.email, "Email") }}
                    {{ form_widget(form.email,{'attr': {'class': 'form-control'},'readonly': 'readonly'}) }}
                    {{ form_errors(form.email) }}
                </td>
            </tr>
            
            <tr>
                <td>
                    {{ form_label(form.objet, "Objet") }}
                    {{ form_widget(form.objet,{'attr': {'class': 'form-control'},'readonly': 'readonly'}) }}
                    {{ form_errors(form.objet) }}
                </td>
            </tr>
            
            <tr>
                <td>
                    {{ form_label(form.message, "Message") }}
                    {{ form_widget(form.message,{'attr': {'class': 'form-control'},'readonly': 'readonly'}) }}
                    {{ form_errors(form.message) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.etat, "État", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.etat, {'attr': {'class': 'form-control'}, 'value': form.vars.value.etat}) }}
                    {{ form_errors(form.etat) }}
                </td>
            </tr>
            
        
            <tr>
                <td>
                    <button class="btn btn-primary" type="submit" style="font-size: 14px;">Enregistrer</button>
                    <a href="{{ path('admin') }}" class="btn btn-secondary" style="font-size: 14px; margin-left: 10px;">Retour</a>
                </td>
            </tr>
            
            {{ form_end(form) }}
        </table>
    </div>
    


          </div>
        </div>
      </div>


{% endblock %}
