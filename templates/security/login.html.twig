{% extends 'security/register.html.twig' %}

{% block content %}
    <form method="post">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
               autocomplete="email" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <br>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me">Remember me</input>
            </label>
        </div>
        <div style="display: flex; justify-content: space-between;">
            <button class="btn btn-lg btn-primary" type="submit">Sign in</button>
            <a href="{{ path("app_register") }}" style="font-weight: bold; font-size: 17px;">Create an account</a>
        </div>
    </form>
{% endblock %}
