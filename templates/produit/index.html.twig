{% block content %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Evenement</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>
                {% for evenement in evenements %}
                            {% if evenement.getRefProduit == produit.id %}
                                {% if evenement.getTauxRemise != 0 %}
                                    {{ evenement.getTauxRemise }}
                                    <span>% de remise!</span>
                                {% else %}
                                    {% for cadeau in cadeaux %}
                                        {% if cadeau.getEvenement == evenement.id %}
                                            {{ cadeau.getNomProduit }}
                                            <span>en cadeau!</span>
                                        {% endif %} 
                                    {% endfor %}
                                {% endif %}
                            {% endif %}
                {% endfor %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
